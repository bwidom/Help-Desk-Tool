<Window x:Class="EmailWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EmailWindow"
        mc:Ignorable="d"
        Title="Email Templates" Height="140" Width="470" ResizeMode="NoResize">
    <Grid>
        <Label Content="Select Template:" HorizontalAlignment="Left" Height="29" Margin="10,10,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbTemplate" HorizontalAlignment="Left" Height="22" Margin="120,14,0,0" VerticalAlignment="Top" Width="150"/>
        <Label Content="Add Template:" HorizontalAlignment="Left" Height="30" Margin="10,53,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbTemplateName" HorizontalAlignment="Left" Height="22" Margin="120,56,0,0" VerticalAlignment="Top" Width="150"/>
        <Button x:Name="bAddTemplate" Content="Add" HorizontalAlignment="Left" Height="22" Margin="280,56,0,0" VerticalAlignment="Top" Width="73"/>
	<Button x:Name="bSelectTemplate" Content="Select" HorizontalAlignment="Left" Height="22" Margin="280,14,0,0" VerticalAlignment="Top" Width="73"/>
	<Button x:Name="bDeleteTemplate" Content="Delete" HorizontalAlignment="Left" Height="22" Margin="365,14,0,0" VerticalAlignment="Top" Width="73"/>
    </Grid>
</Window>