<Window x:Class="HelpDeskTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelpDeskTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="320" Width="900">
    <Window.Resources>
        <!-- DataGrid style -->
        <Style x:Key="DataGridStyle1" TargetType="{x:Type DataGrid}">
            <Setter Property="ColumnHeaderStyle" Value="{DynamicResource ColumnHeaderStyle1}"/>
        </Style>
        <!-- DataGridColumnHeader style -->
        <Style x:Key="ColumnHeaderStyle1" TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="20"/>
            <Setter Property="Background" Value="#FFD0D0DC"/>
            <Setter Property="Foreground" Value="#FF353232"/>
            <Setter Property="FontSize" Value="12" />
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="Black"/>

        </Style>
    </Window.Resources>
    <Grid Margin="0,0,0,-6">
        <TabControl HorizontalAlignment="Center" Height="301" VerticalAlignment="Top" Width="900" Margin="0,3,0,0">
            <TabItem Header="Users">
                <Grid Background="#FFE5E5E5" Height="271">


                    <Grid Background="#FFE5E5E5">
                        <TextBox x:Name="tbSearchUser" HorizontalAlignment="Left" Height="22" Margin="120,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Background="#FFE5E5E5" BorderBrush="#FF707070"/>
                        <Button x:Name="bSearch" Content="Search" HorizontalAlignment="Left" Height="22" Margin="310,30,0,0" VerticalAlignment="Top" Width="82" Cursor="Hand"/>
                        <ComboBox x:Name="cbSearchCriteria" HorizontalAlignment="Left" Height="22" Margin="15,30,0,0" VerticalAlignment="Top" Width="102" SelectedIndex="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                            <ComboBoxItem Content="EmployeeID"/>
                            <ComboBoxItem Content="Name"/>
                        </ComboBox>


                        <DataGrid Name="dgAccountInfo" Margin="-6,116,0,0" Padding="5,0,0,0" Style="{DynamicResource DataGridStyle1}" Height="150"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" ColumnWidth="*" RowHeaderWidth="0" GridLinesVisibility="None" Width="900" Background="#FFE5E5E5" BorderBrush="{x:Null}" RowBackground="#FFE5E5E5" SelectionUnit="Cell"/>


                        <Button x:Name="bChangePassword" Content="Change Password" HorizontalAlignment="Left" Height="24" Margin="15,85,0,0" VerticalAlignment="Top" Width="196" Cursor="Hand"/>
                        <Button x:Name="bUnlock" Content="Unlock" HorizontalAlignment="Left" Height="24" Margin="227,85,0,0" VerticalAlignment="Top" Width="196" Cursor="Hand"/>
                        <Label x:Name="lEmployeeID" Content="Employee ID:" HorizontalAlignment="Left" BorderThickness="0" Height="17" Margin="472,17,0,0"  VerticalAlignment="Top" Width="138" Background="{x:Null}" BorderBrush="{x:Null}"  Foreground="Black" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
                        <TextBox x:Name="tbEmployeeID" IsReadOnly="True" HorizontalAlignment="Left" BorderThickness="0" Height="17" Margin="554,17,0,0"  VerticalAlignment="Top" Width="200" Background="{x:Null}" BorderBrush="{x:Null}"  Foreground="Black" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
                        <Label x:Name="lSAMAccountName" Content="Username:" HorizontalAlignment="Left" BorderThickness="0" Height="17" Margin="472,37,0,0"  VerticalAlignment="Top" Width="138" Background="{x:Null}" BorderBrush="{x:Null}"  Foreground="Black" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
                        <TextBox x:Name="tbSAMAccountName" IsReadOnly="True" HorizontalAlignment="Left" BorderThickness="0" Height="17" Margin="554,37,0,0" VerticalAlignment="Top" Width="200" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
                        <TextBox x:Name="tbDescription" IsReadOnly="True" HorizontalAlignment="Left" BorderThickness="0" Height="17" Margin="554,57,0,0" VerticalAlignment="Top" Width="200" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
                        <Label x:Name="lDescription" Content="Description:" HorizontalAlignment="Left" BorderThickness="0" Height="17" Margin="472,57,0,0"  VerticalAlignment="Top" Width="138" Background="{x:Null}" BorderBrush="{x:Null}"  Foreground="Black" VerticalContentAlignment="Center" Padding="5,0,5,0"/>
                        <Border BorderBrush="#FF898585" BorderThickness="1" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="390" Tag="User Info" Margin="469,8,0,0"/>
                        <Image x:Name="iDisabledIcon" ToolTip="Account Disabled" HorizontalAlignment="Left" Height="25" Margin="732,14,0,0" VerticalAlignment="Top" Width="25" Visibility="Hidden"/>
                        <Image x:Name="iExpiredPassword" ToolTip="Password Expired" HorizontalAlignment="Left" Height="25" Margin="772,14,0,0" VerticalAlignment="Top" Width="25" Visibility="Hidden"/>
                        <Image x:Name="iExpiredAccount" ToolTip="Account Expired" HorizontalAlignment="Left" Height="25" Margin="812,14,0,0" VerticalAlignment="Top" Width="30" Visibility="Hidden"/>

                        <Label Content="User Info" HorizontalAlignment="Left" Height="18" VerticalAlignment="Top" Width="48" Background="#FFE5E5E5" Padding="0,0,0,5" Foreground="#FF747070" Margin="499,1,0,0"/>
                        <Button x:Name="bSendEmail" Content="Send Email" HorizontalAlignment="Left" Height="24" Margin="465,85,0,0" VerticalAlignment="Top" Width="196" Cursor="Hand"/>
                        <Button x:Name="bMoreUserInfo" Content="More Info" HorizontalAlignment="Left" Height="24" Margin="678,85,0,0" VerticalAlignment="Top" Width="196" Cursor="Hand"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Computers">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13*"/>
                        <ColumnDefinition Width="881*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="tbComputerSearch" HorizontalAlignment="Left" Height="22" Margin="103,14,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="185" Background="#FFE5E5E5" BorderBrush="#FF707070" Grid.Column="1"/>
                    <Label Content="Computer Name:" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="104" Grid.ColumnSpan="2"/>
                    <ListBox x:Name="lbSessions" Background="{x:Null}" HorizontalAlignment="Left" Height="99" Margin="7,71,0,0" VerticalAlignment="Top" Width="440" Grid.ColumnSpan="2"/>
                    <Label Content="Sessions" HorizontalAlignment="Left" Height="26" Margin="10,40,0,0" VerticalAlignment="Top" Width="163" Grid.ColumnSpan="2"/>
                    <Button x:Name="bSearchComputer" Content="Search" HorizontalAlignment="Left" Height="22" Margin="297,14,0,0" VerticalAlignment="Top" Width="82" Cursor="Hand" Grid.Column="1"/>
                    <Button x:Name="bShadow" Content="Shadow" HorizontalAlignment="Left" Height="24" Margin="1,179,0,0" VerticalAlignment="Top" Width="196" Cursor="Hand" Grid.Column="1"/>
                    <Border BorderBrush="#FF898585" BorderThickness="1" HorizontalAlignment="Left" Height="125" Margin="479,57,0,0" VerticalAlignment="Top" Width="373" Grid.Column="1">
                    </Border>
                    <Label Content="Computer Info" Background="#FFE5E5E5" HorizontalAlignment="Left" Margin="518,49,0,0" VerticalAlignment="Top" Width="79" Padding="0,0,0,0" Grid.Column="1"/>
                    <Label Content="Name:" HorizontalAlignment="Left" Height="19" Margin="505,70,0,0" VerticalAlignment="Top" Width="41" Padding="0,0,0,0" Grid.Column="1"/>
                    <TextBox x:Name="tbComputerName" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" BorderThickness="0" HorizontalAlignment="Left" Height="19" Margin="637,70,0,0" VerticalAlignment="Top" Width="178" Padding="0,0,0,0" Grid.Column="1"/>
                    <Label Content="Free Disk Space:" HorizontalAlignment="Left" Height="19" Margin="505,94,0,0" VerticalAlignment="Top" Width="93" Padding="0,0,0,0" Grid.Column="1"/>
                    <TextBox x:Name="tbFreeDiskSpace" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" BorderThickness="0" HorizontalAlignment="Left" Height="19" Margin="637,94,0,0" VerticalAlignment="Top" Width="178" Padding="0,0,0,0" Grid.Column="1"/>
                    <Label Content="Memory Usage:" HorizontalAlignment="Left" Height="19" Margin="505,118,0,0" VerticalAlignment="Top" Width="93" Padding="0,0,0,0" Grid.Column="1"/>
                    <TextBox x:Name="tbMemoryUsage" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" BorderThickness="0" HorizontalAlignment="Left" Height="19" Margin="637,118,0,0" VerticalAlignment="Top" Width="178" Padding="0,0,0,0" Grid.Column="1"/>
                    <Label Content="Last Boot Time:" HorizontalAlignment="Left" Height="19" Margin="505,142,0,0" VerticalAlignment="Top" Width="93" Padding="0,0,0,0" Grid.Column="1"/>
                    <TextBox x:Name="tbLastBootTime" IsReadOnly="True" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black" BorderThickness="0" HorizontalAlignment="Left" Height="19" Margin="637,144,0,0" VerticalAlignment="Top" Width="178" Padding="0,0,0,0" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>